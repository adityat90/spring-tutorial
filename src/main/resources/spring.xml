<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="triangle" class="com.adityatalpade.Triangle">
        <property name="points">
            <list>
                <ref bean="point0" />
                <ref bean="point1" />
                <ref bean="point2" />
            </list>
        </property>
    </bean>

    <bean id="point0" class="com.adityatalpade.Point">
        <constructor-arg value="0"/>
        <constructor-arg value="0"/>
    </bean>

    <bean id="point1" class="com.adityatalpade.Point">
        <constructor-arg value="5"/>
        <constructor-arg value="5"/>
    </bean>

    <bean id="point2" class="com.adityatalpade.Point">
        <constructor-arg value="10"/>
        <constructor-arg value="10"/>
    </bean>
</beans>